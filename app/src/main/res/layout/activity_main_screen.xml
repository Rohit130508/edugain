<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.MainScreen"
    android:background="@drawable/aback"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/imgLogo"
        android:layout_width="240dp"
        android:layout_height="280dp"
        android:src="@drawable/logo"
        android:layout_marginTop="35dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_marginTop="29dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="7dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_trajectory_accent"
            android:fontFamily="@font/capriola"
            android:padding="17dp"
            android:text="User Login"
            android:textColor="@color/colorAccent" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRegistration"
        android:layout_below="@+id/cardLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="10dp"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="17dp"
            android:fontFamily="@font/capriola"
            android:textColor="@color/colorAccent"
            android:drawableEnd="@drawable/ic_trajectory_accent"
            android:text="User Registration"/>

    </androidx.cardview.widget.CardView>

    <TextView

        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="17dp"
        android:fontFamily="@font/capriola"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"

        android:drawableEnd="@drawable/ic_trajectory_accent"
        android:text="All right reserved @ EduGain"/>
    </RelativeLayout>

</ScrollView>
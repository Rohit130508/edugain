<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="17dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/txtCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:drawableStart="@drawable/ic_close"
            android:drawablePadding="13dp"
            android:fontFamily="@font/raleway"
            android:textSize="21sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <TableRow

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/textLanguageSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="17dp"
            android:gravity="center_vertical"
            android:text="Choose Language"
            android:textSize="17sp"
            android:drawableStart="@drawable/ic_translate"
            android:drawablePadding="9dp"
            android:fontFamily="@font/raleway"
            android:textColor="@color/green"
            android:drawableEnd="@drawable/ic_trajectory_accent"
            tools:ignore="HardcodedText" />


    </TableRow>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>


    <TableRow

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/textAllRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="17dp"
            android:gravity="center_vertical"
            android:text="All Registration List"
            android:textSize="17sp"
            android:drawableStart="@drawable/ic_checking"
            android:drawablePadding="9dp"
            android:fontFamily="@font/raleway"
            android:textColor="@color/g5"
            android:drawableEnd="@drawable/ic_trajectory_accent"
            tools:ignore="HardcodedText" />


    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/g1"/>
    <TableRow

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/textFAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="17dp"
            android:gravity="center_vertical"
            android:text="FAQ"
            android:textSize="17sp"
            android:drawableStart="@drawable/ic_question"
            android:drawablePadding="9dp"
            android:fontFamily="@font/raleway"
            android:textColor="@color/g5"
            android:drawableEnd="@drawable/ic_trajectory_accent"
            tools:ignore="HardcodedText" />


    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorRed"/>
    <TableRow
        android:id="@+id/tbLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/txtLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="17dp"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:text="Logout"

            android:drawableStart="@drawable/ic_exit"
            android:drawablePadding="17dp"

            android:fontFamily="@font/raleway"
            android:textColor="@color/colorRed"
            android:drawableEnd="@drawable/ic_trajectory_accent" />


    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/g21"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/txtConatactUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="17dp"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:text="Contact Us"

            android:drawableStart="@drawable/ic_contact"
            android:drawablePadding="17dp"

            android:fontFamily="@font/raleway"
            android:textColor="@color/g11"
            android:drawableEnd="@drawable/ic_trajectory_accent" />


    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/g2"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/txtAboutUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="17dp"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:text="About Us"

            android:drawableStart="@drawable/ic_planet"
            android:drawablePadding="17dp"

            android:fontFamily="@font/raleway"
            android:textColor="@color/g11"
            android:drawableEnd="@drawable/ic_trajectory_accent" />


    </TableRow>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/yellow"/>

</LinearLayout>
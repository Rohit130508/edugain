<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

    <LinearLayout
        android:id="@+id/lay_top"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingTop="5dp"
        android:paddingEnd="18dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/tr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center_vertical"
                    android:text="Available Balance"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txt_walletBal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/texthint"
                    android:textSize="17sp" />







            </TableRow>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/colorGrey"/>

            <TableRow
                android:id="@+id/trMainWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">





                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center_vertical"
                    android:text="Credit Balance"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/txtcrWallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/texthint"
                    android:textSize="17sp" />



            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />


            <TableRow
                android:id="@+id/trDebitBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">



                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center_vertical"
                    android:text="Debit Balance"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/txtDebitMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/texthint"
                    android:textSize="17sp" />

               <!-- <TextView
                    android:id="@+id/txt_addMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="7dp"
                    android:drawableLeft="@drawable/ic_control_point_black_24dp"
                    android:text="@string/add_money"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp" />-->



            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_balanceDetail"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_semibold"
                        android:gravity="center"
                        android:drawablePadding="7dp"
                        android:text="Transaction History"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorAccent"
                        android:textSize="15sp" />


                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGrey"

                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:visibility="gone"
                        android:id="@+id/txt_showTeamLedger"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/raleway_semibold"
                        android:textSize="15sp"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorPrimaryDark"/>

                </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/linearPay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_debit_card"
                    android:drawableEnd="@drawable/ic_trajectory_black"
                    android:drawablePadding="7dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:padding="15dp"
                    android:textColor="@color/colorBlack"
                    android:text="Pay Anyone Anywhere"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    tools:ignore="HardcodedText" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/colorGrey"

                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/linearReceive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="7dp"
                        android:drawableStart="@drawable/ic_income"

                        android:drawableEnd="@drawable/ic_trajectory_black"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="Receive Money"
                        android:textAllCaps="false"
                        android:textSize="17sp"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="1"
                        android:padding="15dp"
                        tools:ignore="HardcodedText" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/colorGrey"

                        />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/linearLayout_AddMoney"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="7dp"
                        android:drawableStart="@drawable/ic_wallet_"
                        android:drawableEnd="@drawable/ic_trajectory_black"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="Add Money in wallet"
                        android:textAllCaps="false"
                        android:textSize="17sp"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="1"
                        android:padding="15dp"
                        tools:ignore="HardcodedText" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/colorGrey"

                        />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/linear_bankTransfer"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="7dp"
                        android:drawableStart="@drawable/ic_bank_building"
                        android:drawableEnd="@drawable/ic_trajectory_black"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="Transfer Money"
                        android:textAllCaps="false"
                        android:textSize="17sp"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="1"
                        android:padding="15dp"
                        tools:ignore="HardcodedText" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/colorGrey"

                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_semibold"
                            android:gravity="center"
                            android:drawablePadding="7dp"
                            android:text="Utilities Services"
                            android:textColor="@color/colorWhite"
                            android:background="@color/colorAccent"
                            android:textSize="15sp" />


                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorGrey"

                            />


                    </LinearLayout>









                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>


</RelativeLayout>
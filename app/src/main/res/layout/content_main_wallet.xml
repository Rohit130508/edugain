<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

    <LinearLayout
        android:id="@+id/lay_top"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingTop="5dp"
        android:paddingEnd="18dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/tr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/capriola"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:text="Available Balance"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txt_walletBal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/capriola"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp" />







            </TableRow>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/colorGrey"/>

            <TableRow
                android:id="@+id/trMainWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">





                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/capriola"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:text="Credit Balance"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/txtcrWallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/capriola"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp" />



            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

 <TableRow
                android:id="@+id/trDebitBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">





                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/capriola"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:text="Debit Balance"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/txtDebitMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/capriola"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp" />

               <!-- <TextView
                    android:id="@+id/txt_addMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/capriola"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="7dp"
                    android:drawableLeft="@drawable/ic_control_point_black_24dp"
                    android:text="@string/add_money"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp" />-->



            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_balanceDetail"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/capriola"
                        android:gravity="center"
                        android:drawablePadding="7dp"
                        android:text="Transaction History"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorAccent"
                        android:textSize="15sp" />


                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorGrey"

                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:visibility="gone"
                        android:id="@+id/txt_showTeamLedger"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/capriola"
                        android:textSize="15sp"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorPrimaryDark"/>

                </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="9dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="9dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/linearPay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="7dp"
                        android:drawableTop="@drawable/ic_debit_card"
                        android:gravity="center"
                        android:fontFamily="@font/capriola"
                        android:text="Pay"
                        android:textAllCaps="false"
                        android:textSize="13sp"
                        android:layout_weight="1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/linearReceive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="7dp"
                        android:drawableTop="@drawable/ic_income"
                        android:gravity="center"
                        android:fontFamily="@font/capriola"
                        android:text="Receive"
                        android:textAllCaps="false"
                        android:textSize="13sp"
                        android:layout_weight="1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/linearLayout_AddMoney"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_wallet_"
                        android:drawablePadding="7dp"
                        android:gravity="center"
                        android:fontFamily="@font/capriola"
                        android:text="Add Money"
                        android:textAllCaps="false"
                        android:textSize="13sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="9dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="9dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/linear_bankTransfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_bank_building"
                    android:drawablePadding="7dp"
                    android:fontFamily="@font/capriola"
                    android:gravity="center"
                    android:text="Bank Transfer"
                    android:textAllCaps="false"
                    android:textSize="13sp" />



            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="9dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="9dp"
                    android:orientation="horizontal"
                    android:weightSum="3">



                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPrimaryDark"
                    android:text="Utilities Services"
                    android:fontFamily="@font/capriola"
                    android:textColor="@color/colorWhite"
                    android:textSize="13sp"
                    android:paddingStart="9dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>


</RelativeLayout>
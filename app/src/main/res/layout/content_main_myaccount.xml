<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

    <LinearLayout
        android:id="@+id/lay_top"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingTop="5dp"
        android:paddingEnd="18dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_balanceDetail"
                        android:layout_width="match_parent"
                        android:padding="17dp"

                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway"
                        android:text="@string/app_name"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/g1"
                        android:textSize="17sp" />





                </LinearLayout>

                <TableRow
                    android:id="@+id/tr1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/txtMyProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="17dp"
                        android:text="My Profile"
                        android:gravity="center_vertical"
                        android:textSize="17sp"
                        android:fontFamily="@font/raleway"
                        android:textColor="@color/colorAccent"
                        android:drawableEnd="@drawable/ic_trajectory_accent" />






                </TableRow>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/colorGrey"/>

                <TableRow
                    android:id="@+id/trMainWallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">





                    <TextView
                        android:id="@+id/txtMyScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="17dp"
                        android:gravity="center_vertical"
                        android:text="My Score"

                        android:textSize="17sp"
                        android:fontFamily="@font/raleway"
                        android:textColor="@color/colorBlack"
                        android:drawableEnd="@drawable/ic_trajectory_accent" />



                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGrey" />

                <TableRow
                    android:id="@+id/trDebitBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/txtPriceHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="17dp"
                        android:textSize="17sp"
                        android:gravity="center_vertical"
                        android:text="Price History"
                        android:fontFamily="@font/raleway"
                        android:textColor="@color/design_default_color_secondary"
                        android:drawableEnd="@drawable/ic_trajectory_accent" />


                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGrey" />

                <TableRow
                    android:id="@+id/tbLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/txtLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="17dp"
                        android:gravity="center_vertical"
                        android:textSize="17sp"
                        android:text="Logout"
                        android:fontFamily="@font/raleway"
                        android:textColor="@color/colorRed"
                        android:drawableEnd="@drawable/ic_trajectory_accent" />


                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />






            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardMaxElevation="10dp"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardElevation="10dp">


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardMaxElevation="10dp"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardElevation="10dp">


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardMaxElevation="10dp"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardElevation="10dp">


            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </LinearLayout>



</RelativeLayout>

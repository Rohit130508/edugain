<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardMaxElevation="10dp"
    app:contentPadding="13dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="13dp">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="21sp"
                android:fontFamily="@font/raleway_bold"
                android:text="Gk Quiz"/>

            <TextView
                android:id="@+id/txtTCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:textAlignment="center"
                android:drawableStart="@drawable/ic_time"
                android:drawablePadding="9dp"
                android:fontFamily="@font/capriola"
                android:text="Gk Quiz Competition"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/quiz1"
               />

            <TableRow
                android:layout_marginStart="7dp"
                android:gravity="center"
                android:padding="13dp"
                android:background="@drawable/boxborder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:drawablePadding="7dp"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:drawableStart="@drawable/ic_award"
                android:textSize="17sp"

                android:fontFamily="@font/raleway"
                android:text="Play &amp; Earn "/>

            <TextView
                android:layout_marginStart="2dp"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:drawableStart="@drawable/ic_coins"
                android:textSize="19sp"
                android:fontFamily="@font/raleway"
                android:text="500"/>
            </TableRow>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Now"
            android:textSize="17sp"
            android:fontFamily="@font/raleway"
            android:textColor="@color/white"
            android:background="@drawable/boxborder2"
            android:paddingRight="17dp"
            android:paddingLeft="17dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_gravity="end"
            android:layout_marginTop="13dp"/>


    </LinearLayout>


</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.MainScreen"
    android:background="@drawable/bg_rect2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView

        android:layout_centerHorizontal="true"
        android:id="@+id/imgLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        android:layout_marginTop="35dp"
        android:paddingStart="17dp"
        android:paddingBottom="7dp"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/txtWelcom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:text="Welcome in !"
            android:layout_below="@+id/imgLogo"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/raleway_semibold"
            android:paddingStart="17dp"
            android:paddingBottom="3dp"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27sp"
            android:text="EduGain Now"
            android:layout_below="@+id/txtWelcom"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/raleway_semibold"
            android:paddingStart="17dp"
            android:paddingBottom="17dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="7dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_trajectory_accent"
            android:fontFamily="@font/raleway_semibold"
            android:padding="17dp"
            android:drawableStart="@drawable/ic_key"
            android:drawablePadding="13dp"
            android:text="User Login"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:textColor="#00BCD4" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRegistration"
        android:layout_below="@+id/cardLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="10dp"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="17dp"
            android:fontFamily="@font/raleway_semibold"
            android:textColor="@color/g5"
            android:drawableStart="@drawable/ic_img_115542"
            android:drawablePadding="13dp"
            android:drawableEnd="@drawable/ic_trajectory_accent"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:text="User Registration"/>

    </androidx.cardview.widget.CardView>

    <TextView

        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="17dp"
        android:fontFamily="@font/raleway_semibold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"

        android:text="All right reserved @ EduGain"/>
    </RelativeLayout>

</RelativeLayout>